<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… 30/12/2025 14:30"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Outlet:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvHistoryOutlet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Outlet A - Mumbai"
                android:textSize="14sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvHistoryCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delay in Service"
                android:textSize="14sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvHistoryDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Issue description here..."
                android:textSize="14sp"
                android:textColor="#333333"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
